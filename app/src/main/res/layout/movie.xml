<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="296dp"
    xmlns:android="http://schemas.android.com/apk/res/android"

    app:cardCornerRadius="8dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:layout_marginTop="16dp"
    app:cardBackgroundColor="@color/movie_background"
    >
    <ImageView
        android:id="@+id/picture"
        android:layout_width="166dp"
        android:layout_height="246dp"
        android:layout_margin="2dp"
        android:src="@drawable/movie"
        android:scaleType="centerCrop"
        />
    <ImageView
            android:layout_width="166dp"
            android:layout_height="248dp"
            android:layout_margin="2dp"
            android:src="@drawable/mask"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="6dp"
        android:src="@drawable/rectangle"
        />

    <TextView
        android:id="@+id/year_rating"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto"
        android:text="13+"
        android:textFontWeight="900"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        />
    <ImageView
        android:id="@+id/like"
        android:layout_width="16dp"
        android:layout_height="14dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/like"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="146dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="214dp"
        android:text="Action, Adventure, Drama"
        android:textColor="#FF3466"
        android:textSize="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="228dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/star_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/star_icon"
            android:layout_marginTop="2dp"
            />
    <ImageView
        android:id="@+id/star_2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/star_icon"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        />
    <ImageView
        android:id="@+id/star_3"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/star_icon"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        />
    <ImageView
        android:id="@+id/star_4"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/star_icon"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        />
    <ImageView
        android:id="@+id/star_5"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/star_icon"
        android:layout_marginStart="6dp"
        android:layout_marginTop="2dp"
        />


        <TextView
            android:layout_marginStart="5dp"
            android:id="@+id/reviews"
            android:layout_width="53dp"
            android:layout_height="12dp"
            android:fontFamily="@font/roboto"
            android:text="125 REVIEWS"
            android:textColor="#6D6D80"
            android:textAlignment="center"
            android:textSize="8dp"
            android:textFontWeight="900"/>

    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:layout_width="154dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="256dp"
        android:text="Avengers: End Game"
        android:textColor="#ECECEC"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="154dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="276dp"
        android:fontFamily="@font/roboto"
        android:text="137 MIN"
        android:textStyle="normal"
        android:textColor="#565665"
        android:textFontWeight="900"
        android:textSize="8dp" />

</androidx.cardview.widget.CardView>